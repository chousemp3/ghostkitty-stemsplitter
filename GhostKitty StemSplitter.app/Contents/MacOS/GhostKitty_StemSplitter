#!/bin/bash
# GhostKitty StemSplitter App Launcher

# Get the app bundle directory
APP_DIR="$(dirname "$(dirname "$(dirname "$0")")")"
PROJECT_DIR="$APP_DIR"

# Change to project directory  
cd "$PROJECT_DIR"

# Launch the application
if [ -d ".venv" ]; then
    source .venv/bin/activate
    python ghostkitty_stemsplitter.py
else
    # Fallback if virtual environment not found
    python3 ghostkitty_stemsplitter.py
fi
